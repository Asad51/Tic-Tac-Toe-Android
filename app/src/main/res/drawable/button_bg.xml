<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient android:angle="90" android:centerColor="@color/colorAccent" android:endColor="#6ab7ff" android:startColor="@color/colorAccent" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient android:angle="90" android:centerColor="@color/colorAccent" android:endColor="#545454" android:startColor="#545454"  />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <corners android:radius="8dp" />
            <gradient android:angle="270" android:centerColor="@color/colorAccent" android:endColor="#6ab7ff" android:startColor="@color/colorAccent" />

        </shape>
    </item>
</selector>
